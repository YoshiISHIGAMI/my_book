<p id="notice"><%= notice %></p>

  <h1>蔵書一覧</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>表紙</th>
          <th>書名</th>
          <th>著者</th>
          <th>価格</th>
          <th>出版社</th>
          <th>発売日</th>
          <th>ISBN</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><img src="<%= book.image %>" class="img-responsive" alt=""></td>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= number_to_currency(book.price, unit:'￥', precision: 0) %></td>
            <td><%= book.publisher %></td>
            <td><%= book.saledate.strftime('%Y/%m/%d') %></td>
            <td><%= book.isbn %></td>
            <td><%= link_to '詳細', book, class:"btn btn-default btn-lg" %></td>
            <td><%= link_to '修正', edit_book_path(book), class:"btn btn-default btn-lg" %></td>
            <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-lg" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p><%= link_to '本を追加する', new_book_path, class:"btn btn-primary btn-lg btn-block" %></p>


